{
  "name": "image-details",
  "version": "0.1.0",
  "description": "Tools for image descriptions.",
  "keywords": [
    "image",
    "details",
    "aria",
    "aria-details",
    "details element",
    "summary element",
    "alt text",
    "image description",
    "longdesc"
  ],
  "homepage": "https://github.com/sh0ji/image-details",
  "bugs": "https://github.com/sh0ji/image-details/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh0ji/image-details.git"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf dist && parcel build src/index.ts",
    "dev": "parcel watch src/index.ts",
    "examples": "parcel examples/index.html examples/**/longdesc*.html",
    "lint:es": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore",
    "test": "nyc ava"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "ava": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "fibers": "^4.0.2",
    "modern-normalize": "^0.6.0",
    "nyc": "^15.0.0",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.26.3",
    "standard-version": "^7.1.0",
    "typescript": "^3.8.3"
  }
}
