{
  "name": "image-details",
  "version": "0.1.0",
  "description": "Tools for image descriptions.",
  "keywords": [
    "image",
    "details",
    "aria",
    "aria-details",
    "details element",
    "summary element",
    "alt text",
    "image description",
    "longdesc"
  ],
  "homepage": "https://github.com/sh0ji/image-details",
  "bugs": "https://github.com/sh0ji/image-details/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh0ji/image-details.git"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "targets": {
    "docs": {}
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "parcel build src/index.ts",
    "build:docs": "rm -rf public && parcel build site/index.html --dist-dir public --public-url /image-details/ --target docs",
    "build:examples": "rm -rf examples && parcel build site/index.html --dist-dir examples --no-minify --target docs",
    "lint:es": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ignore-path .gitignore",
    "release": "standard-version --sign",
    "start": "parcel site/index.html",
    "test": "nyc ava"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "ava": "^3.13.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "fibers": "^5.0.0",
    "nyc": "^15.1.0",
    "parcel": "^2.0.0-nightly.439",
    "sass": "^1.29.0",
    "standard-version": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
